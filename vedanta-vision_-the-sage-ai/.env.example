# Vedanta Vision AI - Environment Variables
# Copy this file to .env and fill in your actual API keys

# Clerk Authentication (Required)
# Get these from https://clerk.com/
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# AI API Keys (At least one required)
# Get Gemini API key from https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Get Groq API key from https://console.groq.com/keys
VITE_GROQ_API_KEY=your_groq_api_key_here

# Get OpenRouter API key from https://openrouter.ai/keys
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# Payment Gateway Keys (Optional - for Pro features)
# Stripe Keys (for international payments)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Razorpay Keys (for Indian payments)
VITE_RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# Email Service (Optional - for notifications)
# SendGrid API Key
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# AWS SES (Alternative to SendGrid)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1

# Database (Optional - for production)
# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/vedanta-vision

# PostgreSQL Connection String
DATABASE_URL=postgresql://username:password@localhost:5432/vedanta_vision

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Application Settings
NODE_ENV=development
PORT=5731

# Analytics (Optional)
# Google Analytics
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error tracking)
VITE_SENTRY_DSN=https://your_sentry_dsn_here

# Feature Flags (Optional)
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PRO_FEATURES=true
VITE_ENABLE_ADMIN_DASHBOARD=true
